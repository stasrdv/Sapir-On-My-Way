<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.morelgarisi.sapir.Find"
    android:background="@drawable/hgh"

    >





    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:hint="מוצא"

        android:layout_above="@+id/listview"
        android:layout_alignParentStart="true">
    </EditText>


    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_text_size_display_4_material"

        android:divider="#500"
        android:drawSelectorOnTop="true"
        android:layout_above="@+id/search2"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/search2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:hint="יעד"

        android:layout_above="@+id/listview2"
        android:layout_alignParentStart="true" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_text_size_display_4_material"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#E3F2FD"

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="חפש"
        android:id="@+id/button"
        android:drawableRight="@drawable/searchmor"
        android:textSize="15sp"

        android:textColor="#1A237E"

        android:layout_marginStart="15dp"
        android:layout_alignTop="@+id/pickTime"
        android:layout_alignParentStart="true" />

    <Button
        android:background="#E3F2FD"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="שעת יציאה"
        android:id="@+id/pickTime"
        android:layout_marginTop="78dp"
        android:textColor="#1A237E"
        android:textSize="15sp"
        android:drawableRight="@drawable/yuyu"
        android:layout_below="@+id/listview2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="29dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView4"
        android:src="@drawable/shak"


        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>