<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/hgh"

    tools:context="com.morelgarisi.sapir.Post">


    <EditText
        android:id="@+id/search"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"
        android:hint="מוצא">
    </EditText>



    <ListView
        android:id="@+id/listview"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_text_size_display_4_material"
        android:layout_below="@+id/search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/search2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_action_bar_progress_bar_size"


        android:layout_below="@+id/listview"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="יעד" />

    <ListView
        android:id="@+id/listview2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/abc_text_size_display_4_material"
        android:layout_below="@+id/search2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <Button

        android:text="פרסם טרמפ"
        android:id="@+id/button"
        android:background="#E3F2FD"

        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/checkk"
        android:textSize="15sp"
        android:textColor="#1A237E"
        android:layout_marginBottom="98dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/pickTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="מספר מקומות"
        android:textSize="15sp"
        android:textColor="#1A237E"
        android:id="@+id/textView3"
        android:layout_below="@+id/numberPicker"
        android:layout_alignParentStart="true"
        android:gravity="left"
        />

    <Button

        android:id="@+id/pickTime"
        android:background="#E3F2FD"

        style="?android:attr/buttonStyleSmall"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="שעת יציאה"
        android:textColor="#1A237E"
        android:textSize="15sp"
        android:drawableRight="@drawable/yuyu"

        android:layout_alignTop="@+id/numberPicker"
        android:layout_alignEnd="@+id/listview2" />


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="השתתפות"
        android:id="@+id/payment"
        android:checked="false"
        android:gravity="right"
        android:textColor="#1A237E"

        android:layout_above="@+id/pickTime"
        android:layout_alignParentEnd="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_alignBottom="@+id/button"
        android:layout_alignEnd="@+id/textView3"

        />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imageView4"
        android:src="@drawable/shak"
        android:layout_alignTop="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp" />
    />
</RelativeLayout>
