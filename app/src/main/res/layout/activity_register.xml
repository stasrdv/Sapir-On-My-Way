<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/AppTheme"
    android:background="@drawable/hgh"
    tools:context="com.example.stas.project.Register">


    <!-- Login Form -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dip"
        android:layout_below="@id/picture"
        android:id="@+id/linearLayout">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="153dp">
            <ImageView
                android:id="@+id/image"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

        </RelativeLayout>

        <!--  Email Label -->
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#1A237E"
            android:text="שם"/>


        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="#1A237E"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:id="@+id/name"
            android:divider="#1A237E"
            android:dividerHeight="4px"
            />

        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#1A237E"
            android:text="שם משפחה"/>

        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="#1A237E"
            android:layout_marginBottom="20dip"
            android:singleLine="true"
            android:id="@+id/lname"
            android:divider="#1A237E"
            android:dividerHeight="4px"
            />


        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#1A237E"
            android:text="מספר טלפון"
            android:divider="#1A237E"
            android:dividerHeight="4px"
            />

        <EditText android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:layout_marginBottom="20dip"
            android:inputType="phone"
            android:ems="10"
            android:singleLine="true"
            android:id="@+id/phone"
            android:textColor="#1A237E"
            android:divider="#1A237E"
            android:dividerHeight="4px"

            />


    </LinearLayout>
    <!-- Login Form Ends -->

    <Button

        android:text="צור פרופיל חדש"
        android:id="@+id/register"
        android:background="#E3F2FD"
        android:drawableRight="@drawable/newuser2"
        android:textSize="15sp"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="#1A237E"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="מעשן"
        android:id="@+id/checkBox"
        android:checked="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView"

        android:src="@drawable/shak"


        android:layout_below="@+id/checkBox"
        android:layout_centerHorizontal="true" />


</RelativeLayout>